			               |	И ВерсииФайлов.Ссылка = &Версия";
						   
			Запрос.Параметры.Вставить("Файл", ФайлСсылка);
			Запрос.Параметры.Вставить("Версия", ВерсияСсылка);
		Иначе
			Запрос.Текст = "ВЫБРАТЬ
			               |	Файлы.Ссылка КАК Ссылка,
			               |	Файлы.Код КАК Код,
			               |	Файлы.Редактирует КАК Редактирует,
