				ТекСтрокаДерева = ДанныеДереваГрупп.ПолучитьЭлементы().Получить(0);
			КонецЕсли;	
		Иначе	
			Элементы.ДеревоГрупп.ТекущаяСтрока = ТекущаяСтрокаДереваГруппировок;
			ТекСтрокаДерева = Элементы.ДеревоГрупп.ТекущиеДанные;	
		КонецЕсли;
	КонецЕсли;
	
