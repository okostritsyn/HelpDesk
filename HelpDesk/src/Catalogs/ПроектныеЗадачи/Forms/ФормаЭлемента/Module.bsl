						НСтр("ru = 'Не указана единица задержки для предшественника ""%1"".'"),
						Предшественник.Предшественник), ,
					"Объект.Предшественники", ,
					Отказ);
			КонецЕсли;
		КонецЦикла;
	КонецЕсли;
	
