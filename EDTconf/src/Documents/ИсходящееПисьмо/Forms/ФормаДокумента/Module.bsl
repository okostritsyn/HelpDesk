			Записать();
		Исключение
			Возврат;
		КонецПопытки;
	КонецЕсли;
	
	ПереместитьВКорзинуСервер();
	
	Оповестить("ПисьмоИзменено", Объект.Ссылка, ЭтотОбъект);
	
