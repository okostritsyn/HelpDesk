	КонецЕсли;
	
	СтрокаКВозврату = "";
	Для каждого Получатель Из ТаблицаПолучателей Цикл
		
		СтрокаКВозврату = СтрокаКВозврату + 
			ПолучитьПредставлениеАдресата(
				Получатель.Контакт,
				Получатель.ОтображаемоеИмя,
				Получатель.Адрес,
				УчетнаяЗапись) + "; ";
					
	КонецЦикла;
	
	Возврат СтрокаКВозврату;
	
