		ЭлементШрифт,
		НСтр("ru = 'Отправлено'"),
		Формат(ПолеОтправлено, "ДЛФ=DDT"));
	ДобавитьСтрокуДанныхИсходногоПисьма(
		ЭлементШрифт,
		НСтр("ru = 'Кому'"),
		ПолеКому);
	Если Не ПустаяСтрока(ПолеКопии) Тогда
		ДобавитьСтрокуДанныхИсходногоПисьма(
			ЭлементШрифт,
			НСтр("ru = 'Копии'"),
			ПолеКопии);
	КонецЕсли;
	ДобавитьСтрокуДанныхИсходногоПисьма(
		ЭлементШрифт,
		НСтр("ru = 'Тема'"),
		ПолеТема);
	
	Возврат ЭлементШрифт;
	
КонецФункции

