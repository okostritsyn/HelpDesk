		"ВстроеннаяПочта",
		"ОсновнойФлаг",
		Перечисления.ФлагиПисем.Красный);
	
	РегистрыСведений.ФлагиПисем.ПереключитьФлаг(
		Письмо,
		Пользователи.ТекущийПользователь(),
		ОсновнойФлаг);
